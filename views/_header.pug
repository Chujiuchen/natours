header.header
    nav.nav.nav--tours
        a(href='/').nav__el All tours
        form.nav__search
            button.nav__search-btn
                svg
                    use(xlink:href='/img/icons.svg#icon-search')
            input(type='text', placeholder='Search tours', class='nav__search-input')
    div.header__logo
        img(src='/img/logo-white.png', alt='Natours logo')
    nav.nav.nav--user
        if(user)
            a(href='#').nav__el.nav__el--logout Log out
            a(href='/me').nav__el
                img.nav__user-img(src=`/img/users/${user.photo}`, alt=`${user,name} photo`)
                - if (user.name.includes(' '))
                    span= user.name.split(' ')[0]
                - else
                    span= user.name
        else
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='#') Sign up